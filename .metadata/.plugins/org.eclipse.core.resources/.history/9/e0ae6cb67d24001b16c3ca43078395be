package eg1;

public class Casting {

	public static void main(String[] args) {
//		implicit/widening type
		
		int x = 40;
		long y = x;
		System.out.println("Value of y is "+y);
		
		float z = y;
		System.out.println("Value of z is "+z);
		
		short s = 16;
		int i = s;
		System.out.println("Value of i is "+i);
		
		float ff = 12.0f;
		double d = ff;
		System.out.println("Value of d is "+d);
		
		char c = 'S';
		int xx = c;
		System.out.println("Value of xx is "+xx);

		float fff = xx;
		System.out.println("Value of fff is "+fff);
		
		
//		explicit/narrowing type
		
		double dd = 83.08;
		int ii = (int)dd;
		float Ff = (float)dd;
		char cc = (char)ii;
		System.out.println("value of ii is "+ii);
		System.out.println("value of Ff is "+Ff);
		System.out.println("value of cc is "+cc);
	}

}
